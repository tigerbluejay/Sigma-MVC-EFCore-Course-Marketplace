@model IEnumerable<Product>

<div class="row pb-3">
	@foreach(var product in Model)
	{
		<div class="col-md-4 col-lg-4">
			
			<div class="row p-5">
				<div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
					<div class="card">
						<img src="@product.ImageUrl" class="card-img-top rounded"/>
						<div class="card-body">
							<div class="pl-1">
								<p class="card-title h5 text-primary">@product.Title</p>
								<p class="card-title h5 text-info">by <b>@product.Author</b></p>
							</div>
							<div class="pl-1">
								<p>Price: <b>$@product.Price.ToString("0.00")</b></p>
							</div>
						</div>
					</div>
					<div>
						<a asp-controller="Home" asp-action="Details" class="btn btn-primary form-control" asp-route-productId="@product.Id">
							Details
						</a>
					</div>
				</div>
			</div>
		</div>
	}
</div>